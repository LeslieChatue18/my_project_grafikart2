 </div></br>
 <div class="row">
    <div class="col">{{ form_row(form.createdAt)}}</div>
    <div class="col"> {{ form_row(form.updatedAt)}}</div>
 </div></br>
 <div class="row">
    <div class="col">{{ form_row(form.contents)}}</div>
    <div class="col"> {{ form_row(form.duration)}}</div>
 </div></br>
 <div class="row">
    <div class="col text-center">  {{ form_row(form.save)}}

 </div>
 {{ form_end(form)}}
 {% endblock %}
